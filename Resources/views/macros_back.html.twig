    {% if checkTarget is empty %}
        {% set checkTarget = false %}
    {% endif %}

    {% set contextTargetArray = [] %}
    {% set targetClassNameEncoded = oro_class_name(target, true) %}
    {% for item in entity.getActivityTargetEntities() %}
        {% set itemClassName = oro_class_name(item) %}
        {% set itemClassNameEncoded = oro_class_name(item, true) %}
        {% set contextTarget = {
            'entityId': entity.id,
            'targetId': item.id,
