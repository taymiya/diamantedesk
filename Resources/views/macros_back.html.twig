    {% set recipientsCc = [] %}
    {% set recipientsBcc = [] %}
    {% for recipient in email.recipients %}
        {% if recipient.type == 'to' %}
            {% set recipientsTo = recipientsTo|merge([recipient.name|e])%}
        {% elseif recipient.type == 'cc' %}
