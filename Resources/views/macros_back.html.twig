                        <a href="<%= entity.get('link') %>">
                            <span class="context-label"><%= entity.get('title') %></span>
                        </a>
                    <% } else { %>
                        <span class="context-label"><%= entity.get('title') %></span>
                    <% }  %>
                    {% if  resource_granted('EDIT', entity) %}
                        <i class="icon-remove"></i>
                    {% endif %}
                </span>
