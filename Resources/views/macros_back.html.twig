        {% if resource_granted('VIEW', item) and not ((app.user.id == item.id) and (oro_class_name(app.user) == itemClassName)) %}
            {% set contextTargetArray = contextTargetArray|merge([contextTarget]) %}
        {% endif %}
    {% endfor %}

    {% set options = {
        contextTargets: contextTargetArray,
        entityId: entity.id,
        target: false,
        checkTarget: checkTarget
    } %}

    {% if checkTarget %}
        {% set targetEntity = {
            'target': {
                'id' : target.id,
                'className': targetClassNameEncoded
            }
        } %}
        {% set options = options|merge(targetEntity) %}
    {% endif %}

